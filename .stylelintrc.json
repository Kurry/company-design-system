{
  "extends": ["stylelint-config-standard"],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "theme",
          "layer",
          "apply",
          "screen",
          "variants",
          "responsive",
          "components",
          "utilities",
          "base"
        ]
      }
    ],
    "property-no-unknown": [
      true,
      {
        "ignoreProperties": ["/^--/"]
      }
    ],
    "function-no-unknown": [
      true,
      {
        "ignoreFunctions": ["theme", "screen", "oklch", "color-mix"]
      }
    ],
    "declaration-block-trailing-semicolon": null,
    "no-descending-specificity": null
  },
  "ignoreFiles": ["dist/**/*.css", "node_modules/**/*.css", "coverage/**/*.css"]
}
